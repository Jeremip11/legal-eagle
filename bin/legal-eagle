#!/usr/bin/env node

/* eslint-disable no-console */

const legalEagle = require('../lib/legal-eagle');
const path = require('path');

let pathToCheck;

if (process.argv[2]) {
  pathToCheck = path.resolve(process.argv[2]);
} else {
  pathToCheck = process.cwd();
}

legalEagle({path: pathToCheck}, (error, summary) => {
  if (error) {
    console.error(error);
    process.exit(1);
  }

  Object.keys(summary).sort().forEach(libraryName => {
    console.log(`${libraryName}: ${summary[libraryName].license}`);
  });
});
